<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.supringboot.mybatis.mapper.SellTradeMapper">
	<cache />

	<delete id="deleteComment" parameterType="String">
		DELETE FROM commt
		WHERE
		comment_id = #{comment_id}
	</delete>

	<resultMap id="commentResult" type="Comment">
		<id column="comment_id" jdbcType="NUMERIC" property="comment_id" />
		<result column="user_id" jdbcType="NUMERIC" property="user_id" />
		<result column="content" jdbcType="VARCHAR" property="content" />
		<result column="created_at" jdbcType="TIMESTAMP" property="created_at" />
		<result column="modified_at" jdbcType="TIMESTAMP" property="modified_at" />
		<result column="secret" jdbcType="NUMERIC" property="secret" />
	</resultMap>
	
	<select id="getAllComment" parameterType="String" resultMap="commentResult">
		SELECT comment_id, user_id, content, created_at, modified_at, secret
		FROM commt
		WHERE post_id = #{post_id}
	</select>
	
	<select id="getUser" parameterType="int"
		resultType="com.example.supringboot.domain.Account">
		SELECT * FROM Account WHERE user_id=#{user_id}
	</select>

	<select id="numOfComment" parameterType="String"> 
		SELECT COUNT(comment_id) 
		FROM commt 
		WHERE post_id = #{post_id} 
	</select> 

</mapper>